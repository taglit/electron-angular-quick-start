{
	"compilerOptions": {
		"allowJs": true,
		"module": "es2020",
		"target": "es2015",
		"skipLibCheck": true,
		"esModuleInterop": true,

		"sourceMap": true,
		"baseUrl": ".",
		"outDir": ".dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["workspaces/electron-app/**/*", "workspaces/electron-e2e/**/*"]
}
